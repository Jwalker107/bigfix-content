		<Domain>BESC</Domain>
		<DefaultAction ID="Action1">
			<Description>
				<PreLink>Click </PreLink>
				<Link>here</Link>
				<PostLink> to deploy this action.</PostLink>
			</Description>
			<ActionScript MIMEType="application/x-Fixlet-Windows-Shell"><![CDATA[
parameter "numToDelete"="{ number of (now - it) whose(it > 30*day) of modification times of folders of folders "AppData\Local\BigFix\Enterprise Console" of folders of folders "C:\Users" }"

// This will delete only 1 old folder even though there could be many. It is designed to run over and over until all folders have been deleted.
folder delete "{ (preceding text of first ";;GetOnlyOne;;" of it | it) of concatenations ";;GetOnlyOne;;" of pathnames of folders whose(exists (now - it) whose(it > 30*day) of modification times of it) of folders "AppData\Local\BigFix\Enterprise Console" of folders of folders "C:\Users" }"

// 1 is a success, 0 is a failure
exit { (it - number of (now - it) whose(it > 30*day) of modification times of folders of folders "AppData\Local\BigFix\Enterprise Console" of folders of folders "C:\Users") of (it as integer) of parameter "numToDelete" }
]]></ActionScript>
			<SuccessCriteria Option="CustomRelevance"><![CDATA[1 != ( (it - number of (now - it) whose(it > 30*day) of modification times of folders of folders "AppData\Local\BigFix\Enterprise Console" of folders of folders "C:\Users") of (it as integer) of parameter "numToDelete" )]]></SuccessCriteria>
